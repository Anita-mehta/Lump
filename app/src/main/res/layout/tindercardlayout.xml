<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_380sdp"
    android:backgroundTint="@color/emoji_gray20"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/emoji_gray20"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/cardimage"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_woman"
            android:layout_marginTop="@dimen/_3sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/usernamenew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="@+id/cardimage"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Reet Jha"
                android:textSize="@dimen/_22sdp"/>
            <TextView
                android:id="@+id/userlocationnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/usernamenew"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/_15sdp"
                android:text="Mohali"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>