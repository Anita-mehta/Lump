<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginMainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/lumpscreenbg1"/>
    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/logonewlump"
        android:id="@+id/logo"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_centerHorizontal="true">
    </ImageView>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/blue_button"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/humns"
        android:layout_marginTop="@dimen/_50sdp"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_below="@id/logo"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFacebook"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/blue_button"
        android:fontFamily="@font/humns"
        android:gravity="center"
        android:text="Facebook"
        android:layout_below="@id/logo"
        android:inputType="phone"
        android:layout_marginTop="@dimen/_50sdp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/purple_button"
        android:fontFamily="@font/humns"
        android:gravity="center"
        android:text="Phone"
        android:inputType="phone"
        android:layout_marginTop="@dimen/_15sdp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:layout_below="@id/btnFacebook" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="@dimen/_10sdp"
        android:text="Agree to"
        android:id="@+id/tv1"
        android:fontFamily="@font/humns"
        android:drawablePadding="@dimen/_2sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_30sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D45E3D"
        android:textSize="@dimen/_10sdp"
        android:text="User Agreement"
        android:id="@+id/tv2"
        android:fontFamily="@font/humns"
        android:layout_toRightOf="@+id/tv1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_4sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="@dimen/_10sdp"
        android:text="and"
        android:id="@+id/tv3"
        android:fontFamily="@font/humns"
        android:layout_toRightOf="@+id/tv2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_4sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D45E3D"
        android:textSize="@dimen/_10sdp"
        android:text="Privacy Policy"
        android:id="@+id/tv4"
        android:fontFamily="@font/humns"
        android:layout_toRightOf="@+id/tv3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_4sdp"/>

    <FrameLayout
        android:id="@+id/mloaderLayout"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/bg_white_round"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_centerInParent="true"
            app:indicatorName="BallSpinFadeLoaderIndicator"
            app:indicatorColor="@color/purple_200"
            android:layout_gravity="center"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp" />
    </FrameLayout>
</RelativeLayout>