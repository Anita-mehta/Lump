<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/back_welcome"
    tools:context=".activity.RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:id="@+id/registration"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textSize="@dimen/_20sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableLeft="@drawable/arrow"
            android:fontFamily="@font/humns"
            android:textColor="#fff">
        </TextView>

        <RelativeLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImage"
                android:layout_width="@dimen/_400sdp"
                android:layout_height="@dimen/_400sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/person1"
                >

            </de.hdodenhof.circleimageview.CircleImageView>

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/plus_home"
               >
            </ImageView>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name:"
            android:id="@+id/username"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/humns"
            android:textColor="#fff">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/username"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/edit_text"
            android:hint="Type your full name"
            android:textColorHint="#fff"
            android:paddingLeft="@dimen/_2sdp"
            android:singleLine="true"
            android:textColor="#fff"
            android:id="@+id/username_et"
            android:textSize="@dimen/_10sdp"
            android:drawableLeft="@drawable/person"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">
        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:id="@+id/gender"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/humns"
            android:layout_below="@id/username_et"
            android:textColor="#fff">
        </TextView>
        <RadioGroup
            android:id="@+id/radioGrp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:orientation="horizontal"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/male"
                android:buttonTint="#fff"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="#fff"
                android:layout_below="@+id/gender"
                android:layout_marginTop="@dimen/_10sdp">
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:buttonTint="#fff"
                android:id="@+id/female"
                android:layout_toRightOf="@+id/male"
                android:textColor="#fff"
                android:layout_below="@+id/gender"
                android:layout_marginTop="@dimen/_10sdp">
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:buttonTint="#fff"
                android:id="@+id/others"
                android:layout_toRightOf="@+id/female"
                android:textColor="#fff"
                android:layout_below="@+id/gender"
                android:layout_marginTop="@dimen/_10sdp">
            </RadioButton></RadioGroup>
        <View
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/edit_text2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_below="@id/radioGrp"
            android:background="#fff"/>
        <!--    <TextView-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="@dimen/_50sdp"-->
        <!--        android:layout_below="@+id/gender"-->
        <!--        android:layout_marginTop="@dimen/_5sdp"-->
        <!--        android:background="@drawable/edit_text"-->
        <!--        android:textColorHint="#fff"-->
        <!--        android:paddingLeft="@dimen/_4sdp"-->
        <!--        android:id="@+id/edit_text2"-->
        <!--        android:fontFamily="@font/humns"-->
        <!--        android:textSize="@dimen/_10sdp"-->
        <!--        android:layout_marginLeft="@dimen/_10sdp"-->
        <!--        android:layout_marginRight="@dimen/_10sdp"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Age:"
            android:id="@+id/age"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/humns"
            android:layout_below="@id/edit_text2"
            android:textColor="#fff">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/age"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button_back"
            android:hint="18"
            android:paddingLeft="@dimen/_10sdp"
            android:id="@+id/age_et"
            android:textColor="#000"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Bio:"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/humns"
            android:layout_below="@id/edit_text2"
            android:textColor="#fff">
        </TextView>
        <EditText
            android:id="@+id/edtBio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button_back"
            android:hint="Hi,My name is"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="#000"
            android:inputType="textMultiLine"
            android:maxLength="80"
            android:textSize="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"/>
        <FrameLayout
            android:id="@+id/mloaderLayout"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/bg_white_round"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <com.wang.avi.AVLoadingIndicatorView
                android:layout_centerInParent="true"
                app:indicatorName="BallSpinFadeLoaderIndicator"
                app:indicatorColor="@color/purple_200"
                android:layout_gravity="center"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp" />
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interested:"
            android:id="@+id/interested"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/humns"
            android:layout_below="@id/age_et"
            android:textColor="#fff">
        </TextView>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/interested"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button_back"
            android:paddingLeft="@dimen/_10sdp"
            android:id="@+id/spinner"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"/>
        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/btn"
            android:fontFamily="@font/humns"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/_10sdp"
            android:text="Register"
            android:layout_marginTop="@dimen/_15sdp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_below="@id/spinner" />

    </LinearLayout>

</ScrollView>